<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
     android:id="@+id/announce_dialogrl"
     android:padding="5dp"
     android:layout_gravity="center"
    android:background="@android:color/transparent" 
    android:layout_height="wrap_content" >

 

        <RelativeLayout
            android:id="@+id/announce_webrl"
             android:layout_width="match_parent"
            android:paddingTop="22dp"
            android:paddingRight="18dp"
            android:layout_height="400dp"
            android:paddingLeft="18dp"
            android:visibility="invisible"
            android:gravity="center_horizontal"
            android:background="@drawable/u_announcement">

            <RelativeLayout
                android:id="@+id/announce_webview"
               android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_above="@+id/announce_btnok"
                android:layout_centerHorizontal="true"
                android:visibility="invisible"/>

           <ImageButton
               android:id="@+id/announce_btnok"
                android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:visibility="invisible"
               android:layout_alignParentBottom="true"
               android:layout_centerHorizontal="true"
               android:padding="10dp"
               android:background="@android:color/transparent"
               android:src="@drawable/u_announcementb_xml" />

        </RelativeLayout>

	
</RelativeLayout>


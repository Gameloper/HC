<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/u2_account_login_layout_portrait"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:gravity="center_horizontal"
    android:orientation="vertical" >
    
<RelativeLayout
        android:id="@+id/u2_title_bar_layout"
        android:layout_width="fill_parent"
        android:layout_height="42dp"
        android:background="@drawable/top_p"
        android:orientation="vertical" >


        <Button
            android:id="@+id/u2_back_btn"
           android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:gravity="center"
            android:background="@drawable/u2_titlebt_bg"
            android:text="@string/title_back"
            android:textColor="@color/TextColorWhite"
            android:textSize="16sp" >
        </Button>


        <TextView
            android:id="@+id/u2_title_bar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="22sp"
            android:textColor="@color/TextColorWhite"
            android:text="@string/findpass" >
        </TextView>
    </RelativeLayout>
    
 

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_below="@+id/u2_title_bar_layout"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/charge_none_round"
                android:orientation="horizontal" >
                
                <TextView
                        style="@style/u2_option_text_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:textSize="18sp"
                        android:text="@string/user_account"
                        android:textColor="@color/TextColorGray" >
                    </TextView>

                    <EditText
                        android:id="@+id/u2_account_et"
                        style="@style/u2_option_edittext_style"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:imeOptions="actionDone"
                        android:maxLines="12"
                        android:singleLine="true" >
                    </EditText>

                    <!-- <ImageView
                        android:id="@+id/u2_all_account"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/btn_more"
                        >
                    </ImageView> -->
           </LinearLayout>
                
                <Button
                    android:id="@+id/u2_find_pass"
                    android:layout_width="140dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="35dp"
                    android:background="@drawable/login_bt_bg"
                    android:text="@string/findpass"
                    android:textColor="@color/TextColorWhite"
                    android:textSize="20sp" >

                </Button>

            
            
        </LinearLayout>

        <ProgressBar
                android:id="@+id/loadingbar"
                android:visibility="invisible"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
         
</RelativeLayout>
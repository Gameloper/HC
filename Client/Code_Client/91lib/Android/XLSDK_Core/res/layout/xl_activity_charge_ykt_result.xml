<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadingEdge="none"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ECF4FA"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="52dp"
            android:background="@drawable/xl_charge_title"
            android:orientation="horizontal" >
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="78dp"
                android:src="@drawable/xl_charge_ykt_logo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="@string/xl_charge_ykt_ok"
                android:textColor="#1D7FDB"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/xl_charge_ykt_order"
                    android:textColor="#6D7C94"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/xl_charge_ytk_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="123456789"
                    android:textColor="#EF3D34"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/xl_charge_ykt_time"
                android:textColor="#6D7C94"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/xl_charge_ykt_call"
                android:textColor="#6D7C94"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="0755-26630330"
                android:textColor="#6D7C94"
                android:textSize="12sp" />

            <Button
                android:id="@+id/xl_charge_pay_button"
                android:layout_width="fill_parent"
                android:layout_height="38dp"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="26dp"
                android:layout_marginTop="44dp"
                android:background="@drawable/xl_charge_btn_bg"
                android:gravity="center"
                android:text="@string/xl_charge_go_back"
                android:textColor="#ffffff"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>
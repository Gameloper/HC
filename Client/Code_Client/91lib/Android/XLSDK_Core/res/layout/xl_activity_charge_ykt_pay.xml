<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadingEdge="none"
    android:fillViewport="true" >

    <LinearLayout
        android:id="@+id/xl_charge_ykt_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ECF4FA"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="52dp"
            android:background="@drawable/xl_charge_title"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/xl_charge_back_button"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:src="@drawable/xl_charge_back" />
        </RelativeLayout>

        <!-- price info -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="22dp"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/xl_shape_window_bg"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="34dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/xl_charge_channel"
                    android:textColor="#5E7C93"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/xl_charge_ykt_type_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="#084D83"
                    android:textSize="13sp" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#654321" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="34dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/xl_charge_amount"
                    android:textColor="#5E7C93"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/xl_charge_num_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="#f71d01"
                    android:textSize="13sp" />
            </RelativeLayout>

            <View
                android:id="@+id/xl_charge_num_split"
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#654321" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="34dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/xl_charge_rate"
                    android:textColor="#5E7C93"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/xl_charge_rate_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="#084D83"
                    android:textSize="13sp" />
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/xl_charge_shadow" >
        </ImageView>
        <!-- choose price -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#F2FAFF"
            android:orientation="vertical"
            android:paddingBottom="20dp" >

            <RelativeLayout
                android:id="@+id/xl_charge_select_num_panel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/xl_charge_choose_num_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="28dp"
                    android:text="@string/xl_charge_denomination"
                    android:textColor="#5E7C93"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/xl_charge_price_txt"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="2dp"
                    android:layout_toRightOf="@+id/xl_charge_choose_num_txt"
                    android:gravity="center"
                    android:text="10"
                    android:textColor="#3B3B3B"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/xl_charge_select_num_btn"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="2dp"
                    android:layout_toRightOf="@+id/xl_charge_price_txt"
                    android:background="@drawable/xl_selector_dropdown" />

                <TextView
                    android:id="@+id/xl_charge_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="28dp"
                    android:text="@string/xl_charge_ykt_desc"
                    android:textColor="#278AEA"
                    android:textSize="12sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="28dp"
                    android:text="@string/xl_charge_ykt_account"
                    android:textColor="#5E7C93"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/xl_charge_ykt_account_edt"
                    android:layout_width="0dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="28dp"
                    android:layout_weight="1"
                    android:background="@drawable/xl_charge_edtext"
                    android:gravity="center_vertical"
                    android:hint="@string/xl_charge_ykt_account_hint"
                    android:inputType="number"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textColor="#B4B4B4"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="28dp"
                    android:text="@string/xl_charge_ykt_pas"
                    android:textColor="#5E7C93"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/xl_charge_ykt_pas_edt"
                    android:layout_width="0dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="28dp"
                    android:layout_weight="1"
                    android:background="@drawable/xl_charge_edtext"
                    android:gravity="center_vertical"
                    android:hint="@string/xl_charge_ykt_pas_hint"
                    android:inputType="number"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textColor="#B4B4B4"
                    android:textSize="12sp" />
            </LinearLayout>

            <Button
                android:id="@+id/xl_charge_pay_button"
                android:layout_width="fill_parent"
                android:layout_height="38dp"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="26dp"
                android:layout_marginTop="44dp"
                android:background="@drawable/xl_charge_btn_bg"
                android:gravity="center"
                android:text="@string/xl_charge_chargeComfirm"
                android:textColor="#ffffff"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>
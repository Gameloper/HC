		android:textColor="#000000"
		android:textSize="16sp"
		android:text="="
		android:layout_centerVertical="true"
		android:gravity="center_vertical"
		android:layout_height="wrap_content" android:layout_toRightOf="@id/tx2" />
	<TextView android:id="@+id/tx4" android:layout_width="wrap_content"
		android:textColor="#ff6600"
		android:textSize="16sp"
		android:layout_centerVertical="true"
		android:gravity="center_vertical"
		android:layout_height="wrap_content" android:layout_toRightOf="@id/tx3" />

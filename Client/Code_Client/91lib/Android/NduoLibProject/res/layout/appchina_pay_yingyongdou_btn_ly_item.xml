		android:textColor="#00cc99"
		android:textSize="16sp"
		android:text="1å…ƒ"
		android:layout_centerVertical="true"
		android:gravity="center_vertical"
		android:layout_height="wrap_content" android:layout_toRightOf="@id/tx1" />

<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:orientation="vertical" android:background="@drawable/appchina_pay_main_shape">
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/active_ly1" android:layout_width="280dp"
		android:layout_height="200dp" android:orientation="vertical"
		android:background="@drawable/appchina_pay_main_shape">
		<Button android:id="@+id/user_login" android:layout_width="250dp"
			android:layout_marginTop="15dp" android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp" android:padding="8dp"
			android:layout_height="wrap_content" android:gravity="center"
			android:textSize="20sp" android:text="登录N多账户"
			android:background="@drawable/appchina_pay_by_button_selector"
			android:textColor="#ffffff" />
		<Button android:layout_width="250dp" android:id="@+id/user_reg"
			android:padding="8dp" android:layout_height="wrap_content"
			android:layout_marginTop="15dp" android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp" android:gravity="center"
			android:textSize="20sp" android:text="注册N多账户"
			android:background="@drawable/appchina_pay_by_button_selector"
			android:textColor="#ffffff" />
		<LinearLayout android:layout_width="fill_parent"
			android:orientation="horizontal" android:layout_marginTop="15dp"
			android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
			android:layout_height="wrap_content">
			<LinearLayout android:layout_weight="1"
				android:layout_width="wrap_content" android:orientation="horizontal"
				android:layout_height="wrap_content">
				<CheckBox android:id="@+id/fuwu" android:layout_width="wrap_content"
					android:checked="true"
					android:layout_height="wrap_content" />
				<TextView 
					android:id="@+id/xieyi"
					android:layout_width="100dp"
					android:textSize="16dp" android:textColor="#000000"
					android:layout_height="wrap_content" android:text="查看服务协议"
					android:textColorLink="#000000" />
			</LinearLayout>
			<Button android:id="@+id/back" android:layout_weight="1"
				android:gravity="center" android:padding="10dp"
				android:layout_marginRight="10dp"
				android:layout_height="wrap_content" android:layout_width="wrap_content"
				android:background="@drawable/appchina_pay_pay_button_selector"
				android:text="返回" android:textColor="#535353" android:textSize="16sp" />
		</LinearLayout>
	</LinearLayout>
	<LinearLayout android:id="@+id/active_ly2"
		android:visibility="gone" android:layout_width="280dp"
		android:layout_height="200dp" android:orientation="vertical"
		android:background="@drawable/appchina_pay_main_shape">
		<LinearLayout android:layout_width="wrap_content"
			android:layout_marginTop="15dp" android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp" android:layout_height="wrap_content"
			android:id="@+id/username">
			<LinearLayout android:layout_width="250dip"
				android:layout_height="45dp">
				<TextView android:id="@+id/TextView" android:layout_height="wrap_content"
					android:layout_marginLeft="5dp" android:textSize="16sp"
					android:textColor="#000000" android:layout_gravity="center_vertical"
					android:layout_width="60dp" />
				<EditText android:id="@+id/EditText" android:layout_height="wrap_content"
					android:layout_marginLeft="5dp" android:layout_width="170dp"
					android:layout_gravity="center_vertical|left" android:singleLine="true"
					android:layout_marginRight="5dp" android:background="@drawable/appchina_pay_edittext"
					android:maxLength="64"
					android:hint="@string/appchina_pay_active_username_hint" />
			</LinearLayout>
		</LinearLayout>
		<LinearLayout android:layout_width="wrap_content"
			android:layout_marginTop="15dp" android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp" android:layout_height="wrap_content"
			android:id="@+id/password">
			<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="250dip" android:layout_height="45dp">
				<TextView android:id="@+id/TextView" android:layout_height="wrap_content"
					android:layout_marginLeft="5dp" android:textSize="16sp"
					android:textColor="#000000" android:layout_gravity="center_vertical"
					android:layout_width="60dp" />
				<EditText android:id="@+id/EditText" android:layout_height="wrap_content"
					android:layout_marginLeft="5dp" android:layout_width="170dp"
					android:layout_gravity="center_vertical|left"
					android:layout_marginRight="5dp" android:background="@drawable/appchina_pay_edittext"
					android:digits="1234567890qwertyuiopasdfghjklzxcvbnmQWERTYUIOPLKJHGFDSAZXCVBNM.,@_"
					android:inputType="textPassword" android:password="true"
					android:maxLength="64" android:singleLine="true"
					android:hint="@string/appchina_pay_active_pwd_hint" />
			</LinearLayout>
		</LinearLayout>
		<LinearLayout android:layout_width="fill_parent"
			android:layout_marginTop="15dp" android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp" android:layout_height="wrap_content">
			<Button android:id="@+id/sure" android:layout_width="0dp"
				android:layout_weight="1" android:layout_marginRight="10dp"
				android:layout_marginLeft="5dp" android:padding="8dp"
				android:layout_height="wrap_content" android:gravity="center"
				android:textSize="18sp" android:text="确定"
				android:background="@drawable/appchina_pay_by_button_selector"
				android:textColor="#ffffff" />
			<Button android:layout_width="0dp" android:id="@+id/cancel"
				android:layout_weight="1" android:padding="8dp"
				android:layout_height="wrap_content" android:layout_marginLeft="10dp"
				android:layout_marginRight="5dp" android:gravity="center"
				android:textSize="18sp" android:text="返回"
				android:background="@drawable/appchina_pay_by_button_selector"
				android:textColor="#ffffff" />
		</LinearLayout>
	</LinearLayout>
</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content">
	<RelativeLayout android:layout_width="75dp"
		android:duplicateParentState="true"
		android:layout_height="75dp" android:id="@+id/pay_btn"
		android:background="@drawable/appchina_pay_pay_button_selector">
		<LinearLayout android:layout_width="wrap_content"
			android:gravity="center_horizontal"
			android:layout_height="wrap_content" android:layout_centerInParent="true"
			android:orientation="vertical">
			<ImageView android:id="@+id/pay_btn_img"
				android:layout_width="35dp"
				android:layout_height="35dp" />
			<TextView android:layout_marginTop="2dp" android:id="@+id/pay_btn_text"
				android:layout_width="wrap_content" android:textColor="#000000"
				android:textSize="13sp" android:gravity="center_vertical"
				android:layout_height="wrap_content" android:layout_toRightOf="@id/pay_btn_img" />
		</LinearLayout>
	</RelativeLayout>
</FrameLayout>
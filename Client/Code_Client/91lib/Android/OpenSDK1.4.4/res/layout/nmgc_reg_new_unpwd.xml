<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nmgc_main_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/nmgc_login_title_height"
        android:background="@drawable/nmgc_global_title" >

        <TextView
            android:id="@+id/nmgc_setting_complete_reg_title"
            style="@style/nmgc_login_button_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/nmgc_login_title_top"
            android:text="@string/nmgc_reg_unpwd_title"
            android:textSize="@dimen/nmgc_login_title_text_size" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:id="@+id/nmgc_setting_complete_reg_line1_root"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/nmgc_reg_stepone_input_height"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/nmgc_reg_stepone_input_margin_left"
                android:layout_marginRight="@dimen/nmgc_reg_stepone_input_margin_left"
                android:layout_marginTop="@dimen/nmgc_reg_stepone_input_margin_top"
                android:background="@drawable/nmgc_input_border"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/nmgc_setting_complete_reg_line1_left"
                    style="@style/nmgc_login_button_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/nmgc_reg_stepone_input_text_margin_left"
                    android:layout_marginRight="@dimen/nmgc_reg_stepone_input_text_margin_left"
                    android:gravity="center_vertical"
                    android:text="@string/nmgc_lg_account"
                    android:textSize="@dimen/nmgc_login_common_text_size" />

                <ImageView
                    android:id="@+id/nmgc_setting_complete_reg_line1_x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/nmgc_global_title"
                    android:src="@drawable/nmgc_x" />

                <EditText
                    android:id="@+id/nmgc_setting_complete_reg_line1_input"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/nmgc_setting_complete_reg_line1_x"
                    android:layout_toRightOf="@id/nmgc_setting_complete_reg_line1_left"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="@string/nmgc_complete_visitor_username_hint"
                    android:inputType="text"
                    android:maxLength="12"
                    android:singleLine="true"
                    android:textColor="#1a1a1a"
                    android:textSize="@dimen/nmgc_login_common_text_size" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/nmgc_setting_complete_reg_line2_root"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/nmgc_reg_stepone_input_height"
                android:layout_below="@id/nmgc_setting_complete_reg_line1_root"
                android:layout_marginLeft="@dimen/nmgc_reg_stepone_input_margin_left"
                android:layout_marginRight="@dimen/nmgc_reg_stepone_input_margin_left"
                android:layout_marginTop="@dimen/nmgc_reg_stepone_input_margin_top"
                android:background="@drawable/nmgc_input_border"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/nmgc_setting_complete_reg_line2_left"
                    style="@style/nmgc_login_button_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/nmgc_reg_stepone_input_text_margin_left"
                    android:layout_marginRight="@dimen/nmgc_reg_stepone_input_text_margin_left"
                    android:gravity="center_vertical"
                    android:text="@string/nmgc_lg_password"
                    android:textSize="@dimen/nmgc_login_common_text_size" />

                <ImageView
                    android:id="@+id/nmgc_setting_complete_reg_line2_x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/nmgc_global_title"
                    android:src="@drawable/nmgc_x" />

                <EditText
                    android:id="@+id/nmgc_setting_complete_reg_line2_input"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/nmgc_setting_complete_reg_line2_x"
                    android:layout_toRightOf="@id/nmgc_setting_complete_reg_line2_left"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="@string/nmgc_changepwd_pwdhint"
                    android:inputType="text"
                    android:maxLength="16"
                    android:singleLine="true"
                    android:textColor="#1a1a1a"
                    android:textSize="@dimen/nmgc_login_common_text_size" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/nmgc_setting_complete_reg_button_login_root"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/nmgc_setting_complete_reg_line2_root"
                android:layout_marginBottom="@dimen/nmgc_reg_stepone_input_margin_top"
                android:layout_marginLeft="@dimen/nmgc_reg_stepone_input_margin_left"
                android:layout_marginRight="@dimen/nmgc_reg_stepone_input_margin_left"
                android:layout_marginTop="@dimen/nmgc_reg_stepone_input_margin_top"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/nmgc_setting_complete_reg_button_login"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/nmgc_reg_stepone_button_height"
                    android:background="@drawable/nmgc_orange_button_selector"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:text="@string/nmgc_changepwd_find1next"
                    android:textColor="#3e3e3e"
                    android:textSize="@dimen/nmgc_login_button_text_size" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>